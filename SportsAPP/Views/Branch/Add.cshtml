
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}
<script src="~/AngularJS/AddBranch/jsAddBranchController.js"></script>
<script src="~/AngularJS/AjsFactory/AjsFactory.js"></script>

<div ng-controller="AddBranchController" ng-init="form.City = 1;form.State=1 " >
    <div class="row page-tilte align-items-center">
        <div class="col-sm-6 col-sm offset-3">
            <h1 class="weight-300 h3 title">Add Branch</h1>

        </div>
    </div>

    <div class="col-md-6 col-md offset-3">
        <div class="card mb-4">
            @*<div class="card-header">Add Branch</div>*@
            <div class="card-body">

                <form name="formx" ng-submit="submitForm()">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Branch Id</label>
                            <input type="text" class="form-control" id="txtBranch" ng-disabled="true" ng-model="form.BranchId" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Branch Name</label>
                            <input type="text" class="form-control" id="txtBranchName" ng-model="form.BranchName" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Branch Email</label>
                            <input type="email" class="form-control" id="txtBranchEmail" ng-model="form.BranchEmail" placeholder="Email" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPhone4">Phone</label>
                            <input type="number" class="form-control" ng-maxlength="10" ng-model="form.BranchPhone" placeholder="Phone Number" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" id="txtAddress" ng-model="form.Address1" placeholder="1234 Main St" required>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Address 2</label>
                        <input type="text" class="form-control" id="txtAddress2" ng-model="form.Address2" placeholder="Apartment, studio, or floor">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-5">
                            <label for="inputCity">City</label>
                            <select class="form-control" required ng-model="form.City" ng-options="item.pkey_CityId as item.CityName for item in cityLst">
                                <option value="">--Select city-- </option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">State</label>
                            <select class="form-control" required ng-model="form.State" ng-options="item.pkey_state_id as item.state_name for item in stateLst">
                                <option value="">--Select State-- </option>
                            </select>
                           
                            @*<select id="txtState" class="form-control" ng-model="form.State">
            <option ng-repeat="state in stateLst" value="{{state.pkey_state_id}}">{{state.state_name}}</option>
        </select>*@

                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputZip">Pin Code</label>
                            <input type="text" class="form-control" id="txtpin" ng-model="form.Zip">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </div>
        </div>

    </div>
  

</div>

