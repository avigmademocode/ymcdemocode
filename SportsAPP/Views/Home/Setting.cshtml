
@{
    ViewBag.Title = "Setting";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}
<script src="~/AngularJS/AddSetting/jsSettingController.js"></script>
<script src="~/AngularJS/AjsFactory/AjsFactory.js"></script>


<div ng-controller="AddMemberController">
    <div class="col-md-9 col-md offset-1">
        <div class="card mb-5">
            <div class="card-body">
                <h2>Setting</h2>


                <div class="form-row ">
                    <div class="form-group col-md-5">
                        <label for="inputtext">Enter Special Interests </label>
                        <input type="text" class="form-control" id="txtspecint" ng-model="form.specialInterests" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" ng-click="AddSpeInterestsData()">Add Special Interests</button>
                <br />
                <br />

                <div class="form-group col-md-6">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th> Sr No. </th>
                            <th> Special_interests </th>


                        </tr>
                        <tr ng-repeat="item in specintLst">
                            <td>{{$index+1}}</td>
                            <td>{{item.special_interests}}</td>
                        </tr>
                        @*<input type="text" class="form-control" name="specialinterest{{$index}}" ng-repeat="form.specialint" value="{{item.specialintID}}" ng-disable="!enableEdit[{$index}]">*@
                    </table>
                    <a href="#"> <i class="fa fa-edit" style="font-size:24px" ng-click="edit($index)"></i></a>
                </div>
                <br />
                <br />

                <div class="form-row ">
                    <div class="form-group col-md-5">
                        <label for="inputtext">Enter Professional Qualifications </label>
                        <input type="text" class="form-control" id="txtspecint" ng-model="form.proQualifications" />

                    </div>

                </div>
                <button type="submit" class="btn btn-primary" ng-click="AddProQulificationData()">Add Professional Qualifications</button>

                <br />
                <br />
                <div class="form-group col-md-6">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th> Sr No. </th>
                            <th> Professional Qualifications </th>
                        </tr>
                        <tr ng-repeat="item in professinalLst">
                            <td>{{$index+1}}</td>
                            <td>{{item.professional_qualifications}}</td>
                        </tr>
                    </table>
                </div>
                <br />
                <br />
                <div class="form-row ">
                    <div class="form-group col-md-6">
                        <label for="inputtext">Enter GST Percentage </label>
                        <input type="text" class="form-control" ng-model="form.GSTPercentage" />


                    </div>
                </div>
                <p>
                    {{form.GSTPercentage}}
                </p>
                <button type="submit" class="btn btn-primary" ng-click="AddGSTPerData()">Calculate GST Percentage</button>
                <br />
                <br />
                <div>
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Sr No. </th>
                            <th>GST Percentage </th>
                        </tr>
                        <tr ng-repeat="item in GSTPercentageLst">
                            <td>{{$index+1}}</td>
                            <td> <a href="" ng-click="getGSTPer(item)">  {{item.GST_Percentage}}</a></td>

                        </tr>
                    </table>
                </div>
                <br />
                <br />

            </div>
        </div>
    </div>
    @*{{professinalLst}}*@
</div>